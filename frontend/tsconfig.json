{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
